// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id                 String  @unique() @default(cuid())
  title              String
  description        String
  coverImage         String
  cost               Decimal
  createdAt          String
  updatedAt          String
  openDate           String
  propertyCategoryId String
}

enum UserType {
  TENANT
  PROPERTY_ADMIN
  REALTOR
  SYSTEM_ADMIN
}

model User {
  id          String    @unique() @default(cuid())
  email       String?
  password    String?
  firstName   String?
  lastName    String?
  phoneNumber String?
  createdAt   String?
  updatedAt   String?
  userType    UserType?
}

model Owner {
  id         String @unique() @default(cuid())
  propertyId String
  userId     String
}

model Realtor {
  id         String @unique() @default(cuid())
  propertyId String
  userId     String
}

model Tenant {
  id         String  @unique() @default(cuid())
  propertyId String
  userId     String
  realtorId  String?
}

model RealtorPropertyApplication {
  id         String @unique() @default(cuid())
  propertyId String
  realtorId  String
}
